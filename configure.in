# AC_CPP_FUNC
# ------------------ #
# Checks to see if ANSI C99 CPP variable __func__ works.
# If not, perhaps __FUNCTION__ works instead. 
# If not, we'll just define __func__ to "". 
AC_DEFUN([AC_CPP_FUNC],
[AC_REQUIRE([AC_PROG_CC_STDC])dnl
AC_CACHE_CHECK([for an ANSI C99-conforming __func__], ac_cv_cpp_func,
[AC_COMPILE_IFELSE([AC_LANG_PROGRAM([],
[[char *foo = __func__;]])],
  [ac_cv_cpp_func=yes], 
  [AC_COMPILE_IFELSE([AC_LANG_PROGRAM([],
[[char *foo = __FUNCTION__;]])],
  [ac_cv_cpp_func=__FUNCTION__], 
  [ac_cv_cpp_func=no])])])
if test $ac_cv_cpp_func = __FUNCTION__; then
  AC_DEFINE(__func__,__FUNCTION__,
            [Define to __FUNCTION__ or "" if `__func__' does not conform to 
ANSI C.])
elif test $ac_cv_cpp_func = no; then
  AC_DEFINE(__func__,"",
            [Define to __FUNCTION__ or "" if `__func__' does not conform to 
ANSI C.])
fi
])# AC_CPP_FUNC

AC_CPP_FUNC


### Check if we have netcdf
### If LIBNETCDF_LIBRARY does not have zero length it is specified by the user
### If it has zero length, we search for netcdf 

# we need -lnsl on some machines (e.g. SUN)
AC_CHECK_LIB(nsl, yp_bind, LIBNSL=-lnsl, LIBNSL=,)

HAVE_LIBNETCDF="-DHAVE_LIBNETCDF=0"
LIBNETCDF=""
FOUND_LIBNETCDF="no"
if test -z "$LIBNETCDF_LIBRARY"; then
  AC_CHECK_LIB(netcdf,nc_open,[LIBNETCDF="-lnetcdf $LIBNSL"; HAVE_LIBNETCDF="-DHAVE_LIBNETCDF=1"; FOUND_LIBNETCDF="yes"],,[$LIBNSL])
  if test -z "$LIBNETCDF"; then
     AC_MSG_RESULT([Could not find NetCDF version 3 or higher])
     AC_MSG_RESULT([Uvspec will be built without it])
     AC_MSG_RESULT([and the Kato et al. correlated-k parameterization.])
  fi
else 
  AC_MSG_RESULT([$LIBNETCDF_LIBRARY])
  AC_CHECK_LIB(netcdf,nc_open,[LIBNETCDF="-lnetcdf $LIBNSL $LIBNETCDF_LIBRARY";HAVE_LIBNETCDF="-DHAVE_LIBNETCDF=1";FOUND_LIBNETCDF="yes"],,[$LIBNSL $LIBNETCDF_LIBRARY])
  if test -z "$LIBNETCDF"; then
    AC_MSG_RESULT([%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%])
    AC_MSG_RESULT([% YOUR SYSTEM IS MISSING SOFTWARE NEEDED TO BUILD LIBRADTRAN %])
    AC_MSG_RESULT([%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%])
    AC_MSG_RESULT([Could not find NetCDF version 3 or higher at the specified location])
    AC_MSG_RESULT([Please install and run configure again.])
    AC_MSG_ERROR([Did not find NetCDF.])	
  fi
fi
AC_SUBST(FOUND_LIBNETCDF)
