# Check for FORTRAN NETCDF Libs -- needed for tenstream solver to write and load Lookuptables
HAVE_LIBNETCDFF="-DHAVE_LIBNETCDFF=0"

LIBNETCDFF=""
FOUND_LIBNETCDFF="no"

AC_CHECK_PROG([HAVE_NF_CONFIG],[nf-config],["yes"])

if test $HAVE_NF_CONFIG = "yes"; then
    AC_MSG_RESULT([ Found nf-config --- will use that to determine compiler flags ])
    LIBNETCDFF=$(nf-config --flibs)
    HAVE_LIBNETCDFF="-DHAVE_LIBNETCDFF=1"
    FOUND_LIBNETCDFF="yes"
    AC_MSG_RESULT([ Found nf-config --- libnetcdff=$LIBNETCDFF ])
else
    if test -z "$LIBNETCDFF_LIBRARY"; then
        AC_CHECK_LIB(netcdff,__netcdf_MOD_nf90_open,[LIBNETCDFF="-lnetcdff $LIBNSL"; HAVE_LIBNETCDFF="-DHAVE_LIBNETCDFF=1"; FOUND_LIBNETCDFF="yes"],,[$LIBNSL])
        if test -z "$LIBNETCDFF"; then
            AC_MSG_RESULT([Could not find fortran NetCDF version 3 or higher])
            AC_MSG_RESULT([Tenstream solver needs it to load Lookuptables])
        fi
    else 
        AC_MSG_RESULT([$LIBNETCDFF_LIBRARY])
        AC_CHECK_LIB(netcdff,__netcdf_MOD_nf90_open,[LIBNETCDFF="-lnetcdff $LIBNSL $LIBNETCDFF_LIBRARY";HAVE_LIBNETCDFF="-DHAVE_LIBNETCDFF=1";FOUND_LIBNETCDFF="yes"],,[$LIBNSL $LIBNETCDFF_LIBRARY])
        if test -z "$LIBNETCDFF"; then
            AC_MSG_RESULT([Could not find Fortran NetCDF version 3 or higher at the specified location])
            AC_MSG_RESULT([Tenstream solver needs it to load Lookuptables])
        fi
    fi
fi
AC_SUBST(FOUND_LIBNETCDFF)
AC_SUBST(HAVE_LIBNETCDFF)
AC_SUBST(LIBNETCDFF)
