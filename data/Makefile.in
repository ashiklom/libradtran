TOPDIR = ../

srcdir = @srcdir@
VPATH = $(srcdir)

include $(TOPDIR)/Makeconf

SUBDIRS = crs atmmod solar_flux wc ic albedo altitude aerosol \
	 correlated_k filter cloudprp scripts
 	
DISTFILES = Makefile.in

MYSTICDISTFILES = $(DISTFILES)

all: 
	for dir in $(SUBDIRS); do $(MAKE) -C $$dir $@ || exit $$?; done
.PHONY: all

dist:
	for dir in $(SUBDIRS); do mkdir ../`cat ../.fname`/data/$$dir; $(MAKE) -C $$dir $@ || exit $$?; done
	ln $(DISTFILES) ../`cat ../.fname`/data
.PHONY: dist

mystic-dist:
	for dir in $(SUBDIRS); do mkdir ../`cat ../.fname`/data/$$dir; $(MAKE) -C $$dir $@ || exit $$?; done
	ln $(MYSTICDISTFILES) ../`cat ../.fname`/data
.PHONY: mystic-dist

clean:
	for dir in $(SUBDIRS); do $(MAKE) -C $$dir $@ || exit $$?; done
.PHONY: clean

install:
	for dir in $(SUBDIRS); do $(MAKE) -C $$dir $@ || exit $$?; done
.PHONY: install

uninstall:
.PHONY: uninstall

mostlyclean: clean

distclean: clean
	rm -f Makefile config.status

realclean: distclean

Makefile: Makefile.in ../config.status
	cd ..; sh config.status

# Prevent GNU make v3 from overflowing arg limit on SysV.
.NOEXPORT:

# eof
